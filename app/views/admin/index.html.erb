<div>
  <header>
    <h1>Welcome</h1>
  </header>

  <section>
    <p>
      It's <%= @time %>.
    </p>
    <p>
      There are <%= pluralize(@thangs, "thang") %> and <%= pluralize(@users, "user") %>.
    </p>
  </section>

  <section>
    <p><%= link_to "Go to Homepage", root_url %></p>
